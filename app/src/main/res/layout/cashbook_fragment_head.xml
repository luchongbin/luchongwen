<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/margin_200"
    android:layout_margin="5dp"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/margin_60"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rl_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="单位/负责人："
                android:textColor="@color/tab_text_normal"
                android:textSize="@dimen/text_size_23sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_dig_flat_hour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_head"
            android:layout_marginTop="@dimen/margin_15">

            <TextView
                android:id="@+id/dig_flat_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="挖平："
                android:textColor="@color/tab_text_normal"
                android:textSize="@dimen/text_size_20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dig_flat_hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_20"
                android:layout_toRightOf="@+id/dig_flat_name"
                android:text="8小时"
                android:textColor="@color/tab_text_normal"
                android:textSize="@dimen/text_size_20sp" />

            <TextView
                android:id="@+id/dig_flat_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_20"
                android:layout_toRightOf="@+id/dig_flat_hour"
                android:text="100元"
                android:textColor="@color/tab_text_normal"
                android:textSize="@dimen/text_size_20sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_fracture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_dig_flat_hour"
            android:layout_marginTop="@dimen/margin_10">

            <TextView
                android:id="@+id/fracture_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="破碎："
                android:textColor="@color/tab_text_normal"
                android:textSize="@dimen/text_size_20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/fracture_hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_20"
                android:layout_toRightOf="@+id/fracture_name"
                android:text="8小时"
                android:textColor="@color/tab_text_normal"
                android:textSize="@dimen/text_size_20sp" />

            <TextView
                android:id="@+id/fracture_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_20"
                android:layout_toRightOf="@+id/fracture_hour"
                android:text="100元"
                android:textColor="@color/tab_text_normal"
                android:textSize="@dimen/text_size_20sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/date_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_below="@+id/rl_fracture"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_20"
            android:text="2018-11-27 20:00:00"
            android:textColor="@color/tab_text_normal"
            android:textSize="@dimen/text_size_15sp"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>
